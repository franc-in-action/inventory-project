generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// --- Core models ---

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  role      Role     @default(STAFF)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locationId String?
  location   Location? @relation(fields: [locationId], references: [id])

  stockMovements    StockMovement[] @relation("StockMovementPerformedBy")
  receivedPurchases Purchase[]      @relation("PurchaseReceivedBy")
}

model Location {
  id        String   @id @default(uuid())
  name      String   @unique
  address   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users          User[]
  products       Product[]
  stockLevels    StockLevel[]
  stockMovements StockMovement[]
  sales          Sale[]
  purchases      Purchase[]
}

model Category {
  id        String   @id @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  products Product[] @relation("CategoryProducts")
}

model Product {
  id          String   @id @default(uuid())
  name        String
  sku         String   @unique
  description String?
  price       Float
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  locationId String
  location   Location @relation(fields: [locationId], references: [id])

  categoryId String
  category   Category @relation("CategoryProducts", fields: [categoryId], references: [id], onDelete: Restrict)

  stockLevels    StockLevel[]
  stockMovements StockMovement[]
  saleItems      SaleItem[]
  purchaseItems  PurchaseItem[]
  productVendors ProductVendor[]
}

model StockLevel {
  id         Int      @id @default(autoincrement())
  productId  String
  locationId String
  quantity   Int      @default(0)
  updatedAt  DateTime @updatedAt

  product  Product  @relation(fields: [productId], references: [id])
  location Location @relation(fields: [locationId], references: [id])

  @@unique([productId, locationId])
}

model StockMovement {
  id           Int      @id @default(autoincrement())
  movementUuid String   @unique
  productId    String
  locationId   String
  delta        Int
  reason       String
  refId        String?
  createdAt    DateTime @default(now())
  performedBy  String

  product  Product  @relation(fields: [productId], references: [id])
  location Location @relation(fields: [locationId], references: [id])
  user     User?    @relation("StockMovementPerformedBy", fields: [performedBy], references: [id])
}

model AuditLog {
  id          Int      @id @default(autoincrement())
  action      String
  entity      String
  entityId    String?
  performedBy String
  metadata    Json?
  createdAt   DateTime @default(now())
}

model Customer {
  id           String   @id @default(uuid())
  name         String
  email        String?  @unique
  phone        String?
  credit_limit Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  sales            Sale[]
  receivedPayments ReceivedPayment[]
  ledger           LedgerEntry[]
}

model Vendor {
  id        String   @id @default(uuid())
  name      String
  email     String?  @unique
  phone     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  purchases      Purchase[]
  issuedPayments IssuedPayment[]
  productVendors ProductVendor[]
  LedgerEntry    LedgerEntry[]
}

model Sale {
  id         String   @id @default(uuid())
  saleUuid   String   @unique
  locationId String
  customerId String
  total      Float
  createdAt  DateTime @default(now())

  location Location          @relation(fields: [locationId], references: [id])
  customer Customer          @relation(fields: [customerId], references: [id])
  items    SaleItem[]
  payments ReceivedPayment[]

  ledger LedgerEntry[] @relation("SaleLedger")
}

model SaleItem {
  id        Int    @id @default(autoincrement())
  saleId    String
  productId String
  qty       Int
  price     Float

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])
}

model ReceivedPayment {
  id            String   @id @default(uuid())
  paymentNumber String   @unique @default("TEMP") // temporary
  saleId        String? // optional for standalone payments
  customerId    String
  amount        Float
  method        String
  createdAt     DateTime @default(now())

  sale     Sale?         @relation(fields: [saleId], references: [id], onDelete: Restrict)
  customer Customer      @relation(fields: [customerId], references: [id], onDelete: Restrict)
  ledger   LedgerEntry[] @relation("ReceivedPaymentLedger")
}

model Purchase {
  id           String   @id @default(uuid())
  purchaseUuid String   @unique
  vendorId     String
  locationId   String
  total        Float
  received     Boolean  @default(false)
  createdAt    DateTime @default(now())

  vendor   Vendor         @relation(fields: [vendorId], references: [id])
  location Location       @relation(fields: [locationId], references: [id])
  items    PurchaseItem[]

  receivedBy     String?
  receivedByUser User?   @relation("PurchaseReceivedBy", fields: [receivedBy], references: [id])

  ledger        LedgerEntry[]   @relation("PurchaseLedger")
  IssuedPayment IssuedPayment[]
}

model PurchaseItem {
  id         Int    @id @default(autoincrement())
  purchaseId String
  productId  String
  qty        Int
  price      Float

  purchase Purchase @relation(fields: [purchaseId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])
}

model IssuedPayment {
  id            String   @id @default(uuid())
  paymentNumber String   @unique @default("TEMP") // temporary
  purchaseId    String? // optional if standalone payment
  vendorId      String
  amount        Float
  method        String
  createdAt     DateTime @default(now())

  purchase Purchase?     @relation(fields: [purchaseId], references: [id], onDelete: Restrict)
  vendor   Vendor        @relation(fields: [vendorId], references: [id], onDelete: Restrict)
  ledger   LedgerEntry[] @relation("IssuedPaymentLedger")
}

model ProductVendor {
  productId    String
  vendorId     String
  vendorPrice  Float?
  leadTimeDays Int?

  product Product @relation(fields: [productId], references: [id], onDelete: Restrict)
  vendor  Vendor  @relation(fields: [vendorId], references: [id])

  @@id([productId, vendorId])
}

model LedgerEntry {
  id                String     @id @default(uuid())
  customerId        String?
  vendorId          String?
  saleId            String?
  purchaseId        String?
  receivedPaymentId String?
  issuedPaymentId   String?
  type              LedgerType
  amount            Float
  method            String?
  description       String?
  createdAt         DateTime   @default(now())

  customer        Customer?        @relation(fields: [customerId], references: [id])
  vendor          Vendor?          @relation(fields: [vendorId], references: [id])
  sale            Sale?            @relation(fields: [saleId], references: [id], name: "SaleLedger")
  purchase        Purchase?        @relation(fields: [purchaseId], references: [id], name: "PurchaseLedger")
  receivedPayment ReceivedPayment? @relation(fields: [receivedPaymentId], references: [id], name: "ReceivedPaymentLedger")
  issuedPayment   IssuedPayment?   @relation(fields: [issuedPaymentId], references: [id], name: "IssuedPaymentLedger")
}

enum LedgerType {
  SALE
  PURCHASE
  PAYMENT_RECEIVED
  PAYMENT_ISSUED
  RETURN
  ADJUSTMENT
}

enum Role {
  ADMIN
  MANAGER
  STAFF
}
