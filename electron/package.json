{
  "name": "electron",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "dev": "cross-env ELECTRON_START_URL=http://localhost:5144 electron .",
    "start": "electron .",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --runInBand",
    "build:frontend": "cd ../frontend && npm install && npm run build",
    "dist": "npm run build:frontend && electron-builder --win",
    "postinstall": "electron-rebuild"
  },
  "build": {
    "appId": "com.affluentlife.inventory",
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "npmRebuild": false,
    "asarUnpack": [
      "**/darwin/**"
    ]
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {}
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^25.0.0",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "jest": "^29.0.0"
  },
  "dependencies": {
    "axios": "^1.12.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.2"
  }
}
